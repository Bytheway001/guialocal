
<div class="row">
  <div class="col-md-12">
    <p class="">
      <h1 class="display-4 text-center"><%= @punto.title %></h1>
    </p>

  </div>
</div>
    <% if @punto.fotospunto.any? %>
      <div class="row">
        <% @punto.fotospunto.each do |foto| %>
          <div class="col-md-4"><%= image_tag(foto.url, class: "img-fluid fotos gallery-items") %></div>
        <% end %>
      </div>
    <% end %>
  </p>






<div class="row">
  <p> <h2> <%= @punto.subtitle %> </h2> </p>
</div>
<div class="row">
  <p><%= @punto.description %></p>

</div>

<div class="row">
  <div class="col-md-6">
    <div id="map">
      <iframe
        width="100%"
        height="450"
        frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDKVHaq85J1cJcT1nZjehdz85Ha3iIs5IY
          &q=<%=@punto.mlat%>,<%=@punto.mlon%>&zoom=16&language=es" allowfullscreen>
      </iframe>

    </div>
  </div>
  <div class="col-md-6 form-control">
    <p>
      <strong>Horario:</strong>
      <%= @punto.schedule %>
    </p>

    <p>
      <strong>Precio:</strong>
      <% if @punto.price == "" || @punto.price == nil || @punto.price == 0 %>
        Gratuito
      <% else %>
        <%= @punto.price %><span> € </span>
      <% end %>
    </p>

    <p>
      <strong>Información adicional:</strong>
      <%= @punto.info %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% unless @punto.video.blank? %>
    <p class="text-center cards">
      <iframe width="560" height="315" src="<%= @punto.video %>" frameborder="0" allowfullscreen></iframe>
    </p>
    <% end %>
  </div>
</div>

<%= link_to 'Volver', puntos_path %>
