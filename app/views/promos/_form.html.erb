<%= simple_form_for(@promo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :titulo %>
    <%= f.input :texto %>
    <%= f.date_select :validez %>
    <%= f.input :imgepromo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
