<%= simple_form_for(@incident) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject, label: "Asunto" %>
    <%= f.input :info, label: "Detalles" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviar", class: "btn btn-primary" %>
  </div>
<% end %>
