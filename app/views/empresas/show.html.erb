
  <div class="row" id="cabecero">

      <div class="col-md-4">
        <%= image_tag (@empresa.logo.url), class: "img-fluid" unless @empresa.logo.blank? %>
      </div>

      <div class="col-md-8">

          <div class="display-1" id="titulos">
            <h1><strong><%= @empresa.name %></strong> </h1>
            <h2><mark><%= @empresa.category.name unless @empresa.category.name.blank? %></mark></h2>
          </div>

      </div>
  </div>



<div class="row">
  <div class="col-md-6">
  <div class="alert alert-dark" role="alert">
    <h6>Detalles de contacto</h6>
  </div>

     <p>
      <%= fa_icon "map-marker 2x", class: "text-primary" %>
      <span><%= @empresa.address unless @empresa.address.blank? %></span>
    </p>

    <p>
      <%= fa_icon "phone 2x", class: "text-primary" %>
      <span> <%= @empresa.tel unless @empresa.tel.blank? %></span>
    </p>

    <p>
      <%= fa_icon "at 2x", class: "text-primary" %>
      <span> <%= @empresa.email unless @empresa.email.blank? %></span>
    </p>

    <p>
      <%= fa_icon "link 2x", class: "text-primary"  %>
      <span> <%= link_to(@empresa.web, @empresa.web) unless @empresa.web.blank? %></span>
    </p>

    <p>
      <%= fa_icon "info-circle 2x", class: "text-primary"  %>
      <span><%= @hor %></span>

        <% if @abierto %>
          <span class="badge badge-success">Abierto ahora</span>
        <% else %>
          <span class="badge badge-danger">Está cerrado</span>
        <% end %>

    </p>

  <div class="alert alert-dark" role="alert">
    <h6>Palabras clave</h6>
  </div>

    <div id="entrante">
      <p>
        <% if @empresa.tags.any?  %>
          <%= render @empresa.tags %>
        <% end %>
      </p>
    </div>
  </div>
<!-- -->
  <div class="col-md-6">
    <div id="map">
      <iframe
        width="100%"
        height="450"
        frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDKVHaq85J1cJcT1nZjehdz85Ha3iIs5IY
          &q=<%=@empresa.mlat%>,<%=@empresa.mlon%>&zoom=16&language=es" allowfullscreen>
      </iframe>

    </div>
  </div>
</div>


<div class="row">

  <div class="col-md-9">
    <p><h2 class="text-center"><b>Conoce un poco más de <%= @empresa.name %>, nuestra empresa</b></h2></p>
    <p>
      <div id="description">
        <%= simple_format(@empresa.description) %>
      </div>
    </p>
  </div>

  <div class="col-md-3">
    <p>
      <% if @empresa.promos.any?  %>
        <div class="row alert alert-info">
          <strong>ÚLTIMAS PROMOCIONES</strong>
        </div>
        <%= render @empresa.promos %>
      <% end %>
    </p>
  </div>

</div>

<p><h2 class="text-center"><b>Y porque una imagen vale más que mil palabras</b></h2></p>
<p>
  <% if @empresa.fotos.any? %>
    <div class="row">
      <% @empresa.fotos.each do |foto| %>
        <div class="col-md-4"><%= image_tag(foto.url, class: "img-fluid fotos") %></div>
      <% end %>
    </div>
  <% end %>
</p>

<p><h2 class="text-center"><b>Y porque a veces eso no es suficiente</b></h2></p>

<p class="text-center">
  <iframe width="560" height="315" src="<%= @empresa.video %>" frameborder="0" allowfullscreen></iframe>
</p>




