<div class="row">
  <div class="col-md-4">
    <!-- Alfabético -->
    <div class="card">
      <%= link_to empresas_path do %>
      <img class="card-img-top imf-fluid" src="<%= "#{$url_base}" %>/comunes/az.png" alt="Empresas por orden alfabético">
      <div class="card-body">
        <p class="card-text text-center">Orden Alfabético</p>
      </div>
      <% end %>
    </div>

  </div>
  <div class="col-md-4">
    <!-- Por categoría -->
    <div class="card">
      <%= link_to categories_path do %>
      <img class="card-img-top imf-fluid" src="<%= "#{$url_base}" %>/comunes/categoria.png" alt="Empresas por categorías">
      <div class="card-body">
        <p class="card-text text-center">Por categorías</p>
      </div>
      <% end %>
    </div>

  </div>
  <div class="col-md-4">
    <!-- Palabra clave -->
    <div class="card">
      <%= link_to tags_path do %>
      <img class="card-img-top imf-fluid" src="<%= "#{$url_base}" %>/comunes/hashtags.png" alt="Empresas por palabras clave">
      <div class="card-body">
        <p class="card-text text-center">Por palabras clave</p>
      </div>
      <% end %>
    </div>

  </div>
</div>
