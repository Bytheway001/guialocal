
<h1>Empresas</h1>

<table>
  <thead>
    <tr>
      <th>Logo</th>
      <th>Description</th>
      <th>Mlon</th>
      <th>Mlat</th>
      <th>Schedule</th>
      <th>Address</th>
      <th>Web</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Video</th>
      <th>Fotos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= image_tag (empresa.logo.url), class: "img-fluid" unless empresa.logo.blank? %></td>
        <td><%= empresa.description %></td>
        <td><%= empresa.mlon %></td>
        <td><%= empresa.mlat %></td>
        <td><%= empresa.schedule %></td>
        <td><%= empresa.address %></td>
        <td><%= empresa.web %></td>
        <td><%= empresa.email %></td>
        <td><%= empresa.tel %></td>
        <td><%= empresa.video %></td>
        <td><%= empresa.fotos %></td>
        <td><%= link_to 'Show', empresa %></td>
        <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Empresa', new_empresa_path %>
