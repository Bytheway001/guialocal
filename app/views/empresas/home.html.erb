<div class="row cards">
    <div class="col-md-12">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100 rounded" src="<%= @destacado.first.try(:imgdestacado).try(:url) unless @destacado.first.blank? %>" alt="First slide">
        </div>
        <!-- <div class="carousel-item">
          <img class="d-block w-100" src="<%= @destacado.second.try(:imgdestacado).try(:url) unless @destacado.second.blank? %>" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="<%= @destacado.third.try(:imgdestacado).try(:url) unless @destacado.third.blank? %>" alt="Third slide">
        </div> -->
      </div>

      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  </div>



<div class="row">
  <!-- separador promociones -->
  <div class="col-md-3 col-sm-12">

    <div class="alert alert-info">
      <strong>PROMOCIONES FLASH</strong>
    </div>
    <% if @promos.any?  %>
      <%= render @promos %>
    <% else %>
      <div class="alert alert-secondary">
        No hay promociones recientes
      </div>
    <% end %>
    <div class="row">
      <div class="col-12">
        <div class="text-right">
          <%= link_to 'Ver todas', promos_path %>
        </div>
      </div>
    </div>
  </div>

 <!-- segunda fila -->
   <div class="col-md-6">
     <strong class="text-center">PRÓXIMOS EVENTOS</strong>

     <% if @eventos.any?  %>
       <%= render @eventos %>
     <% else %>
       <div class="row alert alert-secondary">
         No hay eventos próximos
       </div>
     <% end %>

     <div class="text-right">
       <%= link_to 'Ver todos', eventos_path %>
     </div>

     <div class="dropdown-divider"></div>

     <div id="weather">
      <%= render "weather/llerena" %>
     </div>

   </div>

     <!-- tercera columna -->

     <div class="col-md-3">

       <%= link_to empresa_path(@empresas[0]) do %>
       <div class="card" >
         <%= image_tag(@empresas[0].try(:logo).try(:url), class: "card-img-top img-fluid img-pad", alt: "Card image cap") unless @empresas[0].logo.blank? %>
         <div class="card-body">
           <h5 class="card-title"><%= @empresas[0].name if @empresas[0].try(:present?) %></h5>
           <p class="card-text event-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
           <p class="text-center"><small class="text-muted"> - Promocionado - </small></p>
         </div>
       </div>
       <% end %>

       <%= link_to empresa_path(@empresas[1]) do %>
       <div class="card cards">
