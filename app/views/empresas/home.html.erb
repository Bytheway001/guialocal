<div class="row cards">
    <div class="col-md-12">
      <div id="slider">
        <%= render "cities/slider" %>
      </div>
  </div>
</div>

<div class="row">
  <!-- separador promociones -->
  <div class="col-md-3 col-sm-12">

    <div class="alert alert-info">
      <strong>PROMOCIONES FLASH</strong>
    </div>
    <% if @promos.any?  %>
      <%= render @promos %>
    <% else %>
      <div class="alert alert-secondary">
        No hay promociones recientes
      </div>
    <% end %>
    <div class="row">
      <div class="col-12">
        <div class="text-right">
          <%= link_to 'Ver todas', promos_path %>
        </div>
      </div>
    </div>
  </div>

 <!-- segunda fila -->
   <div class="col-md-6 negative-margin">
      <h1 class="mainribbon"> <strong class="ribbon-content">PRÓXIMOS EVENTOS</strong> </h1>

     <% if @eventos.any?  %>
       <%= render @eventos %>
     <% else %>
       <div class="row alert alert-secondary">
         No hay eventos próximos
       </div>
     <% end %>

     <div class="text-right">
       <%= link_to 'Ver todos', eventos_path %>
     </div>

     <div class="dropdown-divider"></div>

     <div id="weather">
      <%= render "cities/weather/#{current_city}/" %>
     </div>

   </div>

     <!-- tercera columna -->

     <div class="col-md-3">

       <%= link_to '#' do %>
       <div class="card card-space-bottom">
         <div class="ribbon">
           <span>Descubre</span>
         </div>
         <%= image_tag(@mapa.try(:imgsrc).try(:url), class: "card-img-top img-fluid img-pad", alt: "Card image cap") unless @mapa.imgsrc.blank? %>
         <div class="card-body">
           <h5 class="card-title">La campiña sur </h5>
           <p class="card-text event-text">Un tesoro turístico escondido en el corazón de Extremadura.</p>
         </div>
       </div>
       <% end %>

       <% if @empresas.count > 0%>

         <%= link_to empresa_path(@empresas[0]) do %>
         <div class="card" >
           <%= image_tag(@empresas[0].try(:logo).try(:url), class: "card-img-top img-fluid img-pad", alt: "Card image cap") unless @empresas[0].logo.blank? %>
           <div class="card-body">
             <h5 class="card-title"><%= @empresas[0].name if @empresas[0].try(:present?) %></h5>
             <p class="card-text event-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
             <p class="text-center"><small class="text-muted"> - Promocionado - </small></p>
           </div>
         </div>
         <% end %>

       <% end %>

       <% if @empresas.count > 1 %>

         <%= link_to empresa_path(@empresas[1]) do %>
         <div class="card cards">
           <%= image_tag(@empresas[1].try(:logo).try(:url), class: "card-img-top img-fluid img-pad", alt: "Card image cap") unless @empresas[1].logo.blank? %>
           <div class="card-body">
             <h5 class="card-title"><%= @empresas[1].name if @empresas[1].present? %></h5>
             <p class="card-text event-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
             <p class="text-center"><small class="text-muted"> - Promocionado - </small></p>
           </div>
         </div>
         <% end %>
       <% end %>

     </div>

   </div>

</div>
