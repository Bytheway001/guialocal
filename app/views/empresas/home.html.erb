<div class="row">


<div class="col-md-12">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="<%= @destacado.first.try(:imgdestacado).try(:url) unless @destacado.first.blank? %>" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="<%= @destacado.second.try(:imgdestacado).try(:url) unless @destacado.second.blank? %>" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="<%= @destacado.third.try(:imgdestacado).try(:url) unless @destacado.third.blank? %>" alt="Third slide">
      </div>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
</div>


