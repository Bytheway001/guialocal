        <% end %>
      </li>
      <li>
        <%= link_to admin_categories_path do %>
          <%= fa_icon "th" %>
          <span>Categor√≠as</span>
          <span class="label label-info float-right"><%= @categories.count %></span>
        <% end %>
      </li>
      <li>
        <%= link_to admin_promos_path do %>
          <%= fa_icon "bullhorn" %>
          <span>Promociones</span>
          <span class="label label-warning float-right"><%= @promos.count %></span>
        <% end %>
      </li>
      <li>
        <%= link_to admin_tags_path do %>
          <%= fa_icon "tag" %>
          <span>Etiquetas</span>
          <span class="label label-default float-right"><%= @tags.count %></span>
        <% end %>
      </li>
      <li>
        <%= link_to admin_eventos_path do %>
          <%= fa_icon "globe" %>
          <span>Eventos</span>
          <span class="label label-primary float-right"><%= @eventos.count %></span>
        <% end %>
      </li>
      <li>
        <%= link_to admin_incidents_path do %>
