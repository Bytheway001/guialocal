<div class="row">
  <div class="col-sm-3 admin">
    <div class="admin-sidebar">
      <div class="user-panel">
        <div class="pull-left image">
          <span><%= image_tag avatar_url(current_user), width:30, class: "img-circle" %></span>
        </div>
        <div class="pull-left info"><p>
          <%= current_user.first_name %>
        </p>

        </div>
      </div>

    </div>
    <ul class="admin-menu">
      <li class="text-uppercase text-center header">Main Navigation</li>
      <li>
        <%= link_to admin_users_path do %>
          <%= fa_icon "users" %>
          <span>Usuarios</span>
          <span class="label label-primary float-right"><%= @users.count %></span>
        <% end %>
      </li>
      <li>
        <%= link_to admin_empresas_path do %>
          <%= fa_icon "building" %>
          <span>Empresas</span>
