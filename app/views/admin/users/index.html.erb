<header>
  <h1>Usuarios</h1>
  <% admins_only do %>
    <ul class="actions">
      <li><%= link_to "Nuevo usuario", new_user_registration_path, class: "new" %></li>
    </ul>
  <% end %>
</header>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Nº</th>
      <th>Avatar</th>
      <th>E-mail</th>
      <th>Desde</th>
      <th>Última vez</th>
      <th>Empresa</th>
      <th>Créditos</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td>"Avatar"</td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td><%= user.last_sign_in_at %></td>
        <td><%= link_to user.empresa.name, edit_empresa_path(user.empresa) if user.empresa.try(:present?) %></td>
        <td><%= user.creditos %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<p><%= link_to "Atrás", admin_root_path %></p>
